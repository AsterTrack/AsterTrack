{
	"configurations": [
		{
			"name": "Linux",
			"includePath": [
				"${workspaceFolder}/dependencies/include/",
				"${workspaceFolder}/dependencies/sources/",
				"${workspaceFolder}/dependencies/sources/imgui/",
				"${workspaceFolder}/sources/",
				"/usr/include/**"
			],
			"defines": [
				"EIGEN_MPL2_ONLY",
				"_FILE_OFFSET_BITS=64",
				"_UNICODE",
				"GLEW_STATIC"
			],
			"compilerPath": "/usr/bin/gcc",
			"cStandard": "gnu17",
			"cppStandard": "gnu++17",
			"intelliSenseMode": "linux-gcc-x64"
		},
		{
			"name": "Win32",
			"includePath": [
				"${workspaceFolder}\\dependencies\\include",
				"${workspaceFolder}\\dependencies\\lib\\win\\**",
				"${workspaceFolder}\\sources"
			],
			"defines": [
				"EIGEN_MPL2_ONLY",
				"_UNICODE",
				"GLEW_STATIC",
				//"GLEW_EGL",
				"USE_WX"
			],
			"cStandard": "c17",
			"cppStandard": "c++17",
			"intelliSenseMode": "windows-msvc-x64"
		}
	],
	"version": 4
}