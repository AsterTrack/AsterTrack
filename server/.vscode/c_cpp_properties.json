{
	"configurations": [
		{ // This is not really maintained, use clangd instead of Microsofts C++ extension on Linux for the best LSP experience
			"name": "Linux",
			"compileCommands": [ "build/compile_commands.json" ],
			"includePath": [
				"${workspaceFolder}/source/",
				"${workspaceFolder}/../shared/",
				"${workspaceFolder}/dependencies/include/",
				"${workspaceFolder}/dependencies/sources/",
				"${workspaceFolder}/dependencies/sources/imgui/"
			],
			"browse": {
				"path": [
					"${workspaceFolder}\\source",
					"${workspaceFolder}\\..\\shared",
					"${workspaceFolder}/dependencies/sources/"
				]
			},
			"defines": [
				"EIGEN_MPL2_ONLY",
				"_FILE_OFFSET_BITS=64",
				"GLEW_STATIC"
			],
			"compilerPath": "/usr/bin/gcc",
			"cStandard": "gnu17",
			"cppStandard": "gnu++20",
			"intelliSenseMode": "linux-gcc-x64"
		},
		{ // This is not really maintained, you can use clangd instead of Microsofts C++ extension on Windows, too, for the best LSP experience
			"name": "Win32",
			"compileCommands": [ "build/compile_commands.json" ],
			"includePath": [
				"${workspaceFolder}\\source",
				"${workspaceFolder}\\..\\shared",
				"${workspaceFolder}\\dependencies\\include",
				"${workspaceFolder}\\dependencies\\sources",
				"${workspaceFolder}\\dependencies\\sources\\imgui",
				"${workspaceFolder}\\dependencies\\lib\\win\\**"
			],
			"browse": {
				"path": [
					"${workspaceFolder}\\source",
					"${workspaceFolder}\\..\\shared",
					"${workspaceFolder}/dependencies/sources/"
				]
			},
			"defines": [
				"EIGEN_MPL2_ONLY",
				"GLEW_STATIC",
				"_GLFW_WIN32"
			],
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "windows-msvc-x64"
		}
	],
	"version": 4
}